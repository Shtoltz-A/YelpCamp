<% layout("layouts/boilerplate") %>

<h1 class="text-primary">All campgrounds <span class="badge rounded-pill text-bg-primary"><%= camps.length %></span></h1>
<% for (camp of camps) { %>
    <article class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= camp.image %>" alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </article>
<% }; %>
