<% layout("layouts/boilerplate") %>
<div class="row">
    <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <div class="card my-3">
            <img src="<%= camp.image %>" class="card-img-top" alt="...">
            <div class="card-body my-3">
                <h5><%= camp.title %></h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text"><small class="text-body-secondary"><%= camp.location %></small></p>
                <p class="card-text"><%= camp.price %>â‚¬ per nigth</p>
            </div>
            <div class="card-body d-flex justify-content-between">
                <div>
                    <a href="/campgrounds" class="btn btn-primary">All campgrounds</a>
                    <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-primary">Edit</a><br>
                </div>
                <div>
                    <form action="/campgrounds/<%= camp._id %>?_method=delete" method="post">
                        <button class="btn btn-secondary">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
