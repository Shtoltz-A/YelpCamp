<% layout("layouts/boilerplate") %>
<link rel="stylesheet" href="/css/stars.css">

<div class="row">
    <div class="col-6">
        <div class="card my-3">

            <img src="<%= camp.image %>" class="card-img-top" alt="...">

            <div class="card-body my-3">
                <h5><%= camp.title %></h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text"><small class="text-body-secondary"><%= camp.location %></small></p>
                <p class="card-text"><%= camp.price %>â‚¬ per nigth</p>
                <p class="card-text">Created by: <strong><%= camp.author?.username %></strong></p>
            </div>

            <% if( currentUser && camp.author._id.equals(currentUser._id) ) { %>
                <div class="card-body d-flex justify-content-between">
                    
                    <div>
                        <a href="/campgrounds" class="btn btn-primary">All campgrounds</a>
                        <a href="/campgrounds/<%= camp._id %>/edit" class="btn btn-primary">Edit</a><br>
                    </div>

                    <div>
                        <form action="/campgrounds/<%= camp._id %>?_method=delete" method="post">
                            <button class="btn btn-secondary">Delete</button>
                        </form>
                    </div>

                </div>
            <% } %>

        </div>
    </div>

    <div class="col-6">

        <h2 class="mt-3">All reviews</h2>
        <% if (camp.reviews) { %>
            <% for(let review of camp.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body">

                        <p class="card-subtitle"><strong><%= review.author.username %></strong></p>
                        <p class="card-text"><%= review.body %></p>
                        <p class="card-text starability-result" data-rating=<%= review.rating %>>
                            Rated: <%= review.rating %> stars
                        </p>

                        <% if( currentUser && review.author._id.equals(currentUser._id) ) { %>
                            <form action="/campgrounds/<%= camp._id %>/reviews/<%= review._id %>?_method=delete" method="post">
                                <button class="btn btn-sm btn-secondary">Delete</button>
                            </form>
                        <% } %>

                    </div>
                </div>
            <% } %>
        <% } %>

        <% if (currentUser) { %>

            <h2>Leave a review</h2>
            <form class="mb-3 validated-form" action="/campgrounds/<%= camp._id %>/reviews" method="post" novalidate>

                <div class="mb-3">
                    <label class="form-label" for="reviewBody">Review</label>
                    <textarea class="form-control" name="review[body]" id="reviewBody" cols="30" rows="4" required></textarea>
                </div>

                <fieldset class="starability-basic">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="3" checked aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>

                <button class="btn btn-primary">Submit</button>
            </form>

        <% } %>

    </div>
</div>
